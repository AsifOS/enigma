VERSION = 0.1.0

# Define the target architecture.
#     i386 -> Intel Architecture 32 (i80_86)

ARCH = i386

# Use one of the following linker.
#     MULTIBOOT2 -> Multiboot2 specific linker. Use this if you wish to do 
#                   Multiboot2 compliant boot.
#     DEFAULT    -> The default linker.

LINKER = MULTIBOOT2